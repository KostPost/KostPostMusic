<!-- RegistrationWindow.xaml -->
<Window x:Class="KostPostMusic.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="New Username" FontSize="16" Margin="0,0,0,5" />
            <TextBox x:Name="NewUsernameTextBox" FontSize="14" Width="250" Padding="5" Margin="0,0,0,10" />

            <TextBlock Text="New Password" FontSize="16" Margin="0,0,0,5" />
            <PasswordBox x:Name="NewPasswordBox" FontSize="14" Width="250" Padding="5" Margin="0,0,0,20" />

            <Button x:Name="RegisterButton" Content="Register" FontSize="14" Padding="10,5" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Window>