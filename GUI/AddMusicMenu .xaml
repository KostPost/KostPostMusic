<Window x:Class="KostPostMusic.AddMusicMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KostPostMusic"
        mc:Ignorable="d"
        Title="Add Music" Height="280" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Add:" Margin="0,0,0,5" />
            <RadioButton x:Name="SingleSongRadioButton" Content="Single Song" IsChecked="True" Margin="0,0,10,0" />

            <TextBlock Text="MP3 File:" Margin="0,10,0,5" />
            <Button x:Name="BrowseFileButton" Content="Browse..." Click="BrowseFileButton_Click" Margin="0,0,0,10" />
            <TextBlock x:Name="SelectedFileTextBlock" Text="" Margin="0,0,0,10" />

            <TextBlock Text="Music Name:" Margin="0,0,0,5" />
            <TextBox x:Name="MusicNameTextBox" Margin="0,0,0,10" />

            <Button x:Name="AddMusicButton" Content="Add Music" Click="AddMusicButton_Click" Margin="0,10" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Window>