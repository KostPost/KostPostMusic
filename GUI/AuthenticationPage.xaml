<!-- AuthenticationWindow.xaml -->
<Window x:Class="KostPostMusic.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication" Height="500" Width="800">
    <Grid>
        <ContentControl x:Name="ContentArea" />

        <StackPanel x:Name="LoginStackPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Username" FontSize="16" Margin="0,0,0,5" />
            <TextBox x:Name="UsernameTextBox" FontSize="14" Width="300" Padding="5" Margin="0,0,0,10" />

            <TextBlock Text="Password" FontSize="16" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox" FontSize="14" Width="300" Padding="5" Margin="0,0,0,20" />

            <Button x:Name="LoginButton" Content="Log In" FontSize="14" Padding="10,5" Click="LoginButton_Click" />
            <Button x:Name="RegisterButton" Content="Register" FontSize="14" Padding="10,5" Margin="0,10,0,0"
                    Click="RegisterButton_Click" />
        </StackPanel>


    </Grid>
</Window>