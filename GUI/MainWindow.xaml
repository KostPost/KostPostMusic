<Window x:Class="KostPostMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KostPostMusic"
        mc:Ignorable="d"
        Title="Main Window" Height="600" Width="1000">
    <Window.Resources>
        <Style TargetType="Page">
            <Setter Property="Background" Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <ContentControl x:Name="ContentArea" />

        
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <!-- This Label has been moved inside the Grid. -->
        <Label x:Name="UsernameLabel" Content="Default" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <!-- Other controls can go here. -->
    </Grid>
</Window>